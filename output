SQL> create table library(book_id int, title varchar(20), author varchar(20));

Table created.

SQL> create table library_audit as select * from library;

Table created.

SQL> insert into library (book_id, title, author) values (101,'DBMS','Suraj');

1 row created.

SQL> insert into library (book_id, title, author) values (102,'CNS','Yash');

1 row created.

SQL> insert into library (book_id, title, author) values (103,'OOP','Rahul');

1 row created.

SQL> insert into library (book_id, title, author) values (104,'CGR','Omkar');

1 row created.

SQL> commit;

Commit complete.

SQL> @C:\Users\Harshad\Desktop\trigger2\update.sql
